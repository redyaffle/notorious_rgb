<div class='converter-panel'>
  <div class='converter col-md-8'>
    <div class="rgb">
      <div class='color-input'>
        {{input type="number" value=red placeholder="0"}}
        <label>red</label>
      </div>
      <div class='color-input'>
        {{input type="number" value=green placeholder="0"}}
        <label>green</label>
      </div>
      <div class='color-input'>
        {{input type="number" value=blue placeholder="0"}}
        <label>blue</label>
      </div>
    </div>

    <div class='hex'>
      <div class='hex-color-input'>
        {{input type="string" value=hex placeholder="#000000"}}
        <label>hexadecimal</label>
      </div>
    </div>
  </div>

  <div class='swatch-panel col-md-4'>
    <div class='swatch' {{bind-attr style=backgroundColor}}>
    </div>
  </div>
</div>
